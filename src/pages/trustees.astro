        class_={"bg-col-2"}
        img={CoTrustee4}
        title={"Ms. Margaret Dbritto"}
        subtitle={"Co-trustee"}
        txt={"Karajgaav patilpada, P.O. Talasari, Tal. Dahanu, Dt. Palghar. 401602"}
      />
      <Card
        class_={"bg-col-2"}
        img={CoTrustee6}

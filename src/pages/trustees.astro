---
// Layout
import PageLayout from "../layouts/PageLayout.astro";
// Components
import Card from "../components/Card.astro";
import {
  President,
  VicePresident,
  Treasurer,
  CoTrustee1,
  CoTrustee2,
  CoTrustee3,
  CoTrustee4,
  CoTrustee5,
  CoTrustee6,
} from "../assets/images/Trustees";
import Section from "../components/Section.astro";

// Assets
import HeroImage from "../assets/images/Trustees/trustees_hero.webp";
---

<PageLayout title="Trustees">
  <div class="h-full w-full bg-col-1-light">
    <img
      src={HeroImage.src}
      alt=""
      class="w-full h-[350px] md:h-[500px] xl:h-[600px] pt-[110px] opacity-[0.95] object-cover"
    />

    <div class="w-full h-max bg-col-1-light">
      <div class="flex items-center justify-center pt-10 text-3xl font-bold">
        <span class="text-txt"
          >Our <span class="text-col-3">Trustees</span></span
        >
      </div>
    </div>
<Section>
    <div
      class="grid content-center justify-center items-center grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-28 py-32 md:gap-12 mx-auto"
    >
      <Card
        class_={"bg-col-2"}
        img={President}
        title={"Ms. Philomena Sequira"}
        subtitle={"President"}
        txt={"Premankur, St. Pius College Campus, Aarey Road, Goregaon East, Mumbai 400020"}
      />
      <Card
        class_={"bg-col-2"}
        img={VicePresident}
        title={"Ms. Sabeena Gonsalves"}
        subtitle={"Vice-President"}
        txt={"Nirmala Niketan, 38 New Marine Lines, Churchgate, Mumbai 400020"}
      />
      <Card
        class_={"bg-col-2"}
        img={Treasurer}
        title={"Ms. Cheryl Machado"}
        subtitle={"Treasurer/Secretary"}
        txt={"Nirmala Nivas, Chuim, Khardanda, Khar West, Mumbai 400052"}
      />
      <Card
        class_={"bg-col-2"}
        img={CoTrustee1}
        title={"Ms. Greta Lopes"}
        subtitle={"Co-trustee"}
        txt={"Nirmala Niketan, 38 New Marine Lines, Churchgate, Mumbai 400020"}
      />
      <Card
        class_={"bg-col-2"}
        img={CoTrustee2}
        title={"Ms. Noella Dias"}
        subtitle={"Co-trustee"}
        txt={"Nirmala Niketan, 38 New Marine Lines, Churchgate, Mumbai 400020"}
      />
      <Card
